<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Encounterly - <%= encounter.name %>
    </title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="icon" type="image/x-icon" href="https://i.imgur.com/XeR8XUQ.png" alt="Image of giant monster eye" />
</head>

<body class="background-img" style="--image-url:url(https://i.imgur.com/3d3mxdk.png)">
    <%- include('../partials/header.ejs') %>
        <div class="center">
            <div class="player">
                <div class="player-items">
                    <h1><%-user.username%>'s Encounters</h1>
                    <h2 style="font-style: italic">
                        <%= encounter.name %>
                    </h2>
                    <h4>This encounter is: <% if (encounter.difficulty === "Easy") { %>
                        <span style="color:rgb(120, 194, 157);">Easy</h4>
                    <% } else if (encounter.difficulty === "Medium") { %>
                        <span style="color:rgb(219, 159, 19);">Medium</h4>
                    <% } else if (encounter.difficulty === "Hard") { %>
                        <span style="color:rgb(162, 100, 198);">Hard</h4>
                    <% } else { %>
                        <span style="color:rgb(255, 14, 14);">Deadly</h4>
                    <% } %>
                     </h4>
                     <div class="inner-container encounter-align">
                    <ul>
                        <h3>Players</h3>
                        <% players.forEach(player=> { %>
                            <li>
                                <a href="/players/<%- player._id %>"><%= player.charName %></a> - Level <%= player.charLevel %>
                            </li>
                            <% }) %>
                    </ul>
                    <ul>
                        <h3>Enemies</h3>
                        <% encounter.enemies.forEach(enemy=> { %>
                            <li>
                                <a href="/monsters/<%- enemy._id %>"><%= enemy.name %></a> - CR <%= enemy.cr %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                    <a href="/encounters/<%= encounter._id %>/edit" class="button-wrapper">Edit Encounter?</a>
                    <form action="/encounters/<%= encounter._id %>?_method=DELETE" method="POST">
                        <button class="button-wrapper delete" type="submit">Delete Encounter?</button>
                    </form>
                </div>
            </div>
        </div>
    <%- include('../partials/footer.ejs') %>
</body>
</html>