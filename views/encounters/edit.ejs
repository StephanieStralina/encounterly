<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Encounterly - Edit Encounters</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="icon" type="image/x-icon" href="https://i.imgur.com/XeR8XUQ.png" alt="Image of giant monster eye" />
</head>

<body class="background-img" style="--image-url:url(https://i.imgur.com/3d3mxdk.png)">
    <%- include('../partials/header.ejs') %>
        <div class="center">
            <div class="player">
                <div class="player-items">
                    <h1>Edit Your Encounter!</h1>
                    <form action="/encounters/<%= encounter._id %>?_method=PUT" method="POST">
                        <label for="encounter-name">Encounter Name:</label>
                        <input type="text" name="name" id="name" value="<%= encounter.name %>" required />

                        <p class="full-col">Hold down the Ctrl (windows) or Command (Mac) button to select multiple options.</p>

                        <div class="wrapper center">
                            <label for="players">Players:</label>
                            <select name="players[]" id="players" multiple>
                                <% players.forEach(player=> { %>
                                    <option value="<%- player._id %>" <%=selectedPlayers.includes(player._id.toString())
                                        ? 'selected' : '' %>>
                                        <%= player.charName %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="wrapper center">
                            <label for="Enemies">Monsters:</label>
                            <select name="enemies[]" id="enemies" multiple>
                                <% monsters.forEach(monster=> { %>
                                    <option value="<%- monster._id %>"
                                        <%=selectedEnemies.includes(monster._id.toString()) ? 'selected' : '' %>>
                                        <%= monster.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <button type="submit">Update Encounter</button>
                    </form>
                </div>
            </div>
        </div>
    <%- include('../partials/footer.ejs') %>
</body>
</html>